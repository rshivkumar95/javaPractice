			return m;
		return null;
	}
	
	public Profile updateprofile(Profile p) throws SQLException
	{
		if(p.getId()<=0)
		{
			return null;
		}
		int i=d.updateData(p);
		if(i!=0)			
		 return p;
		
		return null;
	}
//	
	public Profile removeProfile(long id)
	{
		if(id<=0)
		{
			return null;
		}
		Profile i=d.updateData(id);
		if(i!=0)			
		 return p;
		
		return null;
	}
